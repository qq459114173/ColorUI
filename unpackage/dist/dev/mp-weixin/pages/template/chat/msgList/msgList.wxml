<view class="container"><view class="tui-tabbar"><block wx:for="{{tabbar}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="{{['tui-tabbar-item',current==index?'tui-item-active':'']}}" data-index="{{index}}" data-event-opts="{{[['tap',[['tabbarSwitch',['$event']]]]]}}" bindtap="__e"><tui-icon class="{{[index==0?'tui-ptop-4':'']}}" vue-id="{{'0fa55682-1-'+index}}" name="{{current==index?item.icon+'-fill':item.icon}}" color="{{current==index?'#00C0FB':'#666'}}" size="{{item.size}}" bind:__l="__l"></tui-icon><view class="tui-scale">{{item.text}}</view></view></block></block></view><view class="tui-searchbox"><view data-event-opts="{{[['tap',[['search',['$event']]]]]}}" class="tui-search-input" bindtap="__e"><icon type="search" size="15" color="#999"></icon><text class="tui-search-text">搜索</text></view></view><block wx:for="{{msgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><tui-list-cell vue-id="{{'0fa55682-2-'+index}}" unlined="{{true}}" data-event-opts="{{[['^click',[['detail']]]]}}" bind:click="__e" bind:__l="__l" vue-slots="{{['default']}}"><view class="tui-chat-item"><view class="tui-msg-box"><image class="tui-msg-pic" src="{{'/static/images/news/'+item.pic+'.jpg'}}" mode="widthFix"></image><view class="tui-msg-item"><view class="tui-msg-name">{{item.nickname}}</view><view class="tui-msg-content">{{item.msg}}</view></view></view><view class="{{['tui-msg-right',item.level==3?'tui-right-dot':'']}}"><view class="tui-msg-time">{{item.time}}</view><block wx:if="{{item.msgNum>0}}"><tui-badge vue-id="{{('0fa55682-3-'+index)+','+('0fa55682-2-'+index)}}" type="{{item.level==2?'gray':'danger'}}" dot="{{item.level==3?true:false}}" bind:__l="__l" vue-slots="{{['default']}}">{{item.level!=3?item.msgNum:""}}</tui-badge></block></view></view></tui-list-cell></block></block><view class="tui-safearea-bottom"></view></view>