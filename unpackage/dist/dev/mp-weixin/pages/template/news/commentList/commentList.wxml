<view class="container"><view class="tui-cmt-title">全部评论（501）</view><view class="tui-cmtbox"><block wx:for="{{cmtList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="tui-cmt-cell"><image class="tui-avatar" src="{{'/static/images/news/'+item.avatar}}"></image><view class="tui-cmt-detail"><view class="tui-header-box"><view class="tui-cmt-nickname">{{item.nickname}}</view><view class="{{['tui-fabulous',item.isFabulous?'tui-primary':'']}}" id="{{index}}" data-event-opts="{{[['tap',[['cmtFabulous',['$event']]]]]}}" bindtap="__e"><text>{{item.fabulous==0?'赞':item.fabulous}}</text><tui-icon vue-id="{{'4f6b9cab-1-'+index}}" name="{{item.isFabulous?'agree-fill':'agree'}}" size="{{15}}" color="{{item.isFabulous?'#5677fc':'#9a9a9a'}}" bind:__l="__l"></tui-icon></view></view><view class="tui-cmt-content">{{''+item.content+''}}</view><block wx:if="{{item.replayNum>0}}"><view class="tui-reply-box"><block wx:for="{{item.reply}}" wx:for-item="items" wx:for-index="index2" wx:key="index2"><tui-list-cell vue-id="{{'4f6b9cab-2-'+index+'-'+index2}}" backgroundColor="#f2f2f2" size="{{28}}" unlined="{{item.replayNum<2&&item.reply.length-1==index}}" data-event-opts="{{[['^tap',[['cmtReply']]]]}}" bind:tap="__e" bind:__l="__l" vue-slots="{{['default']}}"><view class="tui-flex-1 tui-reply-nickname">{{items.nickname}}</view><view class="tui-flex-1">{{items.content}}</view></tui-list-cell></block><block wx:if="{{item.replayNum>2}}"><tui-list-cell vue-id="{{'4f6b9cab-3-'+index}}" padding="20rpx 30rpx" backgroundColor="#f2f2f2" size="{{28}}" unlined="{{true}}" data-event-opts="{{[['^tap',[['cmtReply']]]]}}" bind:tap="__e" bind:__l="__l" vue-slots="{{['default']}}"><view class="tui-flex-1  tui-cell-last">{{"共"+item.replayNum+'条回复'}}<tui-icon vue-id="{{('4f6b9cab-4-'+index)+','+('4f6b9cab-3-'+index)}}" name="arrowright" size="{{22}}" color="#5677fc" bind:__l="__l"></tui-icon></view></tui-list-cell></block></view></block><view class="tui-footer">{{''+item.time+''}}<view class="tui-primary tui-ml" hover-class="tui-opcity" hover-start-time="{{150}}" data-event-opts="{{[['tap',[['cmtReply',['$event']]]]]}}" bindtap="__e">回复</view></view></view></view></block></view><view class="tui-operation"><view class="tui-operation-inner"><view data-event-opts="{{[['tap',[['btnCmt',['$event']]]]]}}" class="tui-btn-comment" bindtap="__e">发表你的评论...</view></view></view><block wx:if="{{loadding}}"><tui-loadmore vue-id="4f6b9cab-5" index="{{3}}" type="primary" bind:__l="__l"></tui-loadmore></block><block wx:if="{{!pullUpOn}}"><tui-nomore vue-id="4f6b9cab-6" backgroundColor="#fff" text="没有更多评论" bind:__l="__l"></tui-nomore></block><view class="tui-safearea-bottom"></view></view>