
.container {
	overflow: hidden;
}
.tui-header {
	width: 100%;
	padding: 0 30rpx;
	box-sizing: border-box;
	font-size: 24rpx;
	color: #999;
	height: 54rpx;
	line-height: 54rpx;
	background: #fff8d5;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	position: fixed;
	top: 0;



	z-index: 998;
}
.tui-current {
	color: #5c8dff;
	font-weight: bold;
}
.tui-template {
	padding: 84rpx 80rpx 30rpx 40rpx;
	box-sizing: border-box;
}
.tui-node {
	padding: 3px 0;
}
.tui-content-template {
	border-radius: 10rpx;
	position: relative;
	padding: 20rpx 26rpx;
	font-size: 28rpx;
	color: #fff;
	background: #5c8dff;
	border: 1rpx solid #5c8dff;
	display: inline-block;
}
.tui-content-template::before {
	content: "";
	position: absolute;
	width: 0;
	height: 0;
	top: 14rpx;
	border: 16rpx solid;
	right: 100%;
	border-color: transparent #5c8dff transparent transparent;
}
.tui-template-gray {
	background: #ededed !important;
	border: 1rpx solid #ededed !important;
	color: #999 !important;
}
.tui-template-gray::before {
	border-color: transparent #ededed transparent transparent !important;
}
.tui-version-date {
	font-size: 32rpx;
	font-weight: bold;
	padding-bottom: 20rpx;
}

