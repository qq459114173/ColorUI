
page {
	height: 100%;
	background-color: #fff;
}
.tui-userinfo {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding-top: 80rpx;
}
.tui-avatar {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
}
.tui-nickname {
	font-weight: bold;
	font-size: 40rpx;
	color: #333;
	padding: 20rpx 0;
}
.tui-pwd-tips {
	text-align: center;
	font-size: 30rpx;
	color: #666;
	padding: 60rpx 0 20rpx 0;
}
.tui-flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	font-size: 30rpx;
	color: #333;
}
.tui-fingerprint-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tui-text {
	margin-left: 16rpx;
	vertical-align: middle;
}

