
.container {
	padding: 20rpx 0 50rpx 0;
}
.tui-line-cell {
	width: 100%;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tui-title {
	line-height: 32rpx;
	min-width: 120rpx;
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
}
.tui-input {
	font-size: 32rpx;
	color: #333;
	padding-left: 20rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	overflow: visible;
}
.radio-group {
	margin-left: auto;
	-webkit-transform: scale(0.8);
	        transform: scale(0.8);
	-webkit-transform-origin: 100% center;
	        transform-origin: 100% center;
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
}
.tui-radio {
	display: inline-block;
	padding-left: 28rpx;
	font-size: 36rpx;
	vertical-align: middle;
}
.tui-btn-box {
	padding: 40rpx 50rpx;
	box-sizing: border-box;
}
.tui-button-gray {
	margin-top: 30rpx;
}
.tui-tips {
	padding: 30rpx;
	color: #999;
	font-size: 24rpx;
}

